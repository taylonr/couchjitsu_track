<h3><%= @title %></h3>
<hr />
<div class="ui three stackable cards">
    <%= for s <- @stat do %>
        <div class="raised red card">
            <div class="content">
                <div class="header"><%= s.name %></div>
                <div class="description">
                    <div class="ui statistic">
                        <div class="value"><%= s.sum %></div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>